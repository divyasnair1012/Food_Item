<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.food_itemproject.VisitorNumber"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:text="Adults Veg  (*609)"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adb0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:background="@android:color/background_light"
        android:text="0"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adb1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/adb0"
        android:background="@android:color/background_light"
        android:text="1"
        android:textColor="@android:color/background_dark"
         android:textStyle="bold" />

    <Button
        android:id="@+id/adb2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/adb0"
        android:background="@android:color/background_light"
        android:text="1"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adb3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/adb0"
        android:background="@android:color/background_light"
        android:text="1"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />


    <Button
        android:id="@+id/adb4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/adb1"
        android:background="@android:color/background_light"
        android:text="2"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adb5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/adb4"
        android:layout_toEndOf="@+id/adb4"
        android:background="@android:color/background_light"
        android:text="3"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/adb6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/adb5"
        android:background="@android:color/background_light"
        android:text="4"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adb0"
        android:layout_marginTop="38dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        tools:text="Kids Veg (*709)" />

    <Button
        android:id="@+id/an1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:background="@android:color/background_light"
        android:text="0"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/an2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/adb1"
        android:layout_below="@+id/textView2"
        android:background="@android:color/background_light"
        android:text="1"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/b2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/adb4"
        android:layout_below="@+id/textView2"
        android:background="@android:color/background_light"
        android:text="2"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:text="3"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/b4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/b3"
        android:background="@android:color/background_light"
        android:text="4"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/b4"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="91dp"
        android:layout_toStartOf="@+id/adb6"
        android:text="Button" />


</RelativeLayout>
